---
/**
 * BaseLayout.astro
 * Main layout wrapper for all pages
 */

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  showNav?: boolean;
  showFooter?: boolean;
}

const { 
  title, 
  description = "Fiction by Mae. Strange, tender, sometimes haunted.", 
  showNav = true,
  showFooter = true 
} = Astro.props;

const siteTitle = title.includes('maexmaya') ? title : `${title} â€” maexmaya`;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{siteTitle}</title>
  </head>
  <body>
    {showNav && <Navigation currentPath={currentPath} />}
    <slot />
    {showFooter && <Footer />}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
