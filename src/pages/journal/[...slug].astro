---
/**
 * journal/[...slug].astro
 * Dynamic route for individual journal entries
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('journal');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = entry.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${entry.data.title} — Journal — Mae`} description={entry.data.excerpt}>
  <article class="journal-entry">
    <header class="journal-entry__header">
      <a href="/journal" class="journal-entry__back">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M13 8H3M7 4L3 8l4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Journal
      </a>
      
      <time datetime={entry.data.publishDate.toISOString()} class="journal-entry__date">
        {formattedDate}
      </time>
      
      <h1 class="journal-entry__title">{entry.data.title}</h1>
    </header>

    <div class="journal-entry__content prose">
      <Content />
    </div>

    <footer class="journal-entry__footer">
      {entry.data.tags.length > 0 && (
        <div class="journal-entry__tags">
          {entry.data.tags.map((tag) => (
            <span class="journal-entry__tag">{tag}</span>
          ))}
        </div>
      )}
    </footer>
  </article>
</BaseLayout>

<style>
  .journal-entry {
    max-width: 42rem;
    margin: 0 auto;
    padding: calc(80px + var(--space-xl)) var(--space-lg) var(--space-xl);
  }

  .journal-entry__header {
    margin-bottom: var(--space-xl);
  }

  .journal-entry__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-stone);
    margin-bottom: var(--space-lg);
    transition: color var(--duration-fast) var(--ease-out-quart);
  }

  .journal-entry__back:hover {
    color: var(--color-accent);
  }

  .journal-entry__back svg {
    transition: transform var(--duration-fast) var(--ease-out-quart);
  }

  .journal-entry__back:hover svg {
    transform: translateX(-3px);
  }

  .journal-entry__date {
    display: block;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-stone);
    margin-bottom: var(--space-sm);
  }

  .journal-entry__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 500;
    line-height: 1.2;
    color: var(--color-ink);
  }

  /* Prose styling */
  .journal-entry__content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-ink);
  }

  .journal-entry__content :global(p) {
    margin-bottom: 1.5em;
  }

  .journal-entry__content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 500;
    margin-top: 2em;
    margin-bottom: 0.75em;
  }

  .journal-entry__content :global(h3) {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .journal-entry__content :global(hr) {
    border: none;
    text-align: center;
    margin: 2em 0;
  }

  .journal-entry__content :global(hr::before) {
    content: '· · ·';
    letter-spacing: 0.5em;
    color: var(--color-stone);
  }

  .journal-entry__content :global(blockquote) {
    margin: 1.5em 0;
    padding-left: var(--space-md);
    border-left: 2px solid var(--color-accent);
    font-style: italic;
    color: var(--color-ink-soft);
  }

  .journal-entry__content :global(ul),
  .journal-entry__content :global(ol) {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
  }

  .journal-entry__content :global(li) {
    margin-bottom: 0.5em;
  }

  .journal-entry__content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: var(--color-accent-soft);
    text-underline-offset: 2px;
    transition: text-decoration-color var(--duration-fast) var(--ease-out-quart);
  }

  .journal-entry__content :global(a:hover) {
    text-decoration-color: var(--color-accent);
  }

  .journal-entry__content :global(code) {
    font-size: 0.9em;
    padding: 0.2em 0.4em;
    background-color: var(--color-paper-warm);
    border-radius: 3px;
  }

  /* Footer */
  .journal-entry__footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .journal-entry__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .journal-entry__tag {
    font-size: 0.6875rem;
    font-weight: 500;
    padding: 0.25em 0.75em;
    background-color: var(--color-paper-warm);
    border-radius: 2em;
    color: var(--color-stone);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
