---
/**
 * journal/[...slug].astro
 * Dynamic route for individual journal entries
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import StoryHeader from '../../components/StoryHeader.astro';

export async function getStaticPaths() {
  const entries = await getCollection('journal');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Calculate read time (rough estimate: 200 words per minute)
const wordCount = entry.body.split(/\s+/).length;
const readTime = Math.ceil(wordCount / 200);

const formattedDate = entry.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${entry.data.title} — Journal — Mae`} description={entry.data.excerpt} showNav={false} showFooter={false}>
  <StoryHeader />
  
  <div class="journal-page">
    <article class="journal-entry">
      <header class="journal-entry__header">
        <div class="journal-entry__meta">
          <time datetime={entry.data.publishDate.toISOString()}>{formattedDate}</time>
          <span class="journal-entry__meta-sep">·</span>
          <span>{readTime} min read</span>
        </div>
        
        <h1 class="journal-entry__title">{entry.data.title}</h1>
      </header>

      <div class="journal-entry__content prose">
        <Content />
      </div>

      <footer class="journal-entry__footer">
        {entry.data.tags.length > 0 && (
          <div class="journal-entry__tags">
            {entry.data.tags.map((tag) => (
              <span class="journal-entry__tag">{tag}</span>
            ))}
          </div>
        )}
        
        <nav class="journal-entry__nav">
          <a href="/journal" class="journal-entry__back">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M13 8H3M7 4L3 8l4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            All thoughts
          </a>
        </nav>
      </footer>
    </article>
  </div>
</BaseLayout>

<style>
  /* Full page wrapper for dark mode */
  .journal-page {
    min-height: calc(100vh - 60px);
    background-color: var(--color-paper);
    transition: background-color 0.3s ease;
  }

  :global(.dark-mode) .journal-page {
    background-color: var(--color-ink);
  }

  .journal-entry {
    max-width: 42rem;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  .journal-entry__header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .journal-entry__meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    font-size: 0.8125rem;
    color: var(--color-stone);
    margin-bottom: var(--space-md);
  }

  :global(.dark-mode) .journal-entry__meta {
    color: rgba(250, 248, 245, 0.5);
  }

  .journal-entry__meta-sep {
    opacity: 0.5;
  }

  .journal-entry__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.2;
    color: var(--color-ink);
  }

  :global(.dark-mode) .journal-entry__title {
    color: var(--color-paper);
  }

  /* Prose styling */
  .journal-entry__content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-ink);
  }

  :global(.dark-mode) .journal-entry__content {
    color: rgba(250, 248, 245, 0.9);
  }

  .journal-entry__content :global(p) {
    margin-bottom: 1.5em;
  }

  .journal-entry__content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 2.5em;
    margin-bottom: 1em;
    color: var(--color-ink);
  }

  :global(.dark-mode) .journal-entry__content :global(h2) {
    color: var(--color-paper);
  }

  .journal-entry__content :global(h3) {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    color: var(--color-ink);
  }

  :global(.dark-mode) .journal-entry__content :global(h3) {
    color: var(--color-paper);
  }

  .journal-entry__content :global(hr) {
    border: none;
    text-align: center;
    margin: 2.5em 0;
  }

  .journal-entry__content :global(hr::before) {
    content: '· · ·';
    letter-spacing: 0.5em;
    color: var(--color-stone);
  }

  :global(.dark-mode) .journal-entry__content :global(hr::before) {
    color: rgba(250, 248, 245, 0.4);
  }

  .journal-entry__content :global(blockquote) {
    margin: 2em 0;
    padding-left: var(--space-md);
    border-left: 2px solid var(--color-accent);
    font-style: italic;
    color: var(--color-ink-soft);
  }

  :global(.dark-mode) .journal-entry__content :global(blockquote) {
    color: rgba(250, 248, 245, 0.7);
  }

  .journal-entry__content :global(ul),
  .journal-entry__content :global(ol) {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
  }

  .journal-entry__content :global(li) {
    margin-bottom: 0.5em;
  }

  .journal-entry__content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: var(--color-accent-soft);
    text-underline-offset: 2px;
    transition: text-decoration-color var(--duration-fast) var(--ease-out-quart);
  }

  .journal-entry__content :global(a:hover) {
    text-decoration-color: var(--color-accent);
  }

  .journal-entry__content :global(code) {
    font-size: 0.9em;
    padding: 0.2em 0.4em;
    background-color: var(--color-paper-warm);
    border-radius: 3px;
  }

  :global(.dark-mode) .journal-entry__content :global(code) {
    background-color: rgba(250, 248, 245, 0.1);
    color: rgba(250, 248, 245, 0.9);
  }

  .journal-entry__content :global(em) {
    font-style: italic;
  }

  .journal-entry__content :global(strong) {
    font-weight: 600;
  }

  /* Footer */
  .journal-entry__footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  :global(.dark-mode) .journal-entry__footer {
    border-top-color: rgba(250, 248, 245, 0.2);
  }

  .journal-entry__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .journal-entry__tag {
    font-size: 0.75rem;
    padding: 0.25em 0.75em;
    background-color: var(--color-paper-warm);
    border-radius: 2em;
    color: var(--color-stone);
  }

  :global(.dark-mode) .journal-entry__tag {
    background-color: rgba(250, 248, 245, 0.1);
    color: rgba(250, 248, 245, 0.6);
  }

  .journal-entry__nav {
    margin-top: var(--space-lg);
  }

  .journal-entry__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.875rem;
    color: var(--color-stone);
    transition: color var(--duration-fast) var(--ease-out-quart);
  }

  :global(.dark-mode) .journal-entry__back {
    color: rgba(250, 248, 245, 0.5);
  }

  .journal-entry__back:hover {
    color: var(--color-accent);
  }

  .journal-entry__back svg {
    transition: transform var(--duration-fast) var(--ease-out-quart);
  }

  .journal-entry__back:hover svg {
    transform: translateX(-3px);
  }
</style>